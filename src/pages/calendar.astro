---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Layout from "../layouts/Layout.astro";

// components
import MainBanner from "../components/Banner/MainBanner.astro";

import Faqs from "../components/Faq/FaqFetchAPI.vue";
import Breadcrumbs from "../components/Breadcrumbs.astro";

const lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);
const homeSlug = `/`;
---

<Layout
  title={`ปฎิทินการศึกษา | ${t("name")} ${t("university")}`}
  description={`ปฎิทินการศึกษาหลักสูตรผู้บริหารระดับสูงด้านการค้าและการพาณิชย์ TEPCoT มหาวิทยาลัยหอการค้าไทย`}
  lang={lang}
  isMenu={true}
>
  <MainBanner title={"ปฎิทินการศึกษา TEPCoT"} description={t("name")} />

  <div class="container mx-auto px-4 md:px-0">
    <Breadcrumbs
      items={[
        { label: "หน้าหลัก", href: homeSlug },
        { label: "ปฎิทินการศึกษา" },
      ]}
    />
  </div>

  <div class="pt-16 w-full" id="history">
    <!-- This Content  -->
    <section class="min-h-[calc(100vh-32px)] container mx-auto">
      <h2 class="text-30 md:text-44 font-bold mb-4">
        ปฎิทินการศึกษา TEPCoT รุ่นที่ 18
      </h2>
      <div class="">
        <p class="text-20 md:text-24  text-gray-600">
          กำลังอยู่ในระหว่างการจัดทำปฎิทินการศึกษา
          กรุณาติดต่อทีมงานเพื่อขอข้อมูลเพิ่มเติม
        </p>
      </div>
    </section>

    <!-- <OverViewSection client:visible lang={lang} /> -->
    <Faqs client:load lang={lang} />
    <!-- <AlumniSection client:load lang={lang} /> -->
  </div>
</Layout>
