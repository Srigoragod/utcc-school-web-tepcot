          <!--[--><!--]-->
          <a
            href="https://line.me/R/ti/p/@asc.utcc"
            class="rounded-full px-5 py-3 bg-white/60 text-slate-900 text-30 font-semibold hover:bg-white transition inline-flex items-center gap-2 cursor-pointer shadow-lg"
          >
            LINE ID : @asc.utcc
          </a>
        </div>
      </div>
    </div>
  </section>
  <Footer lang={lang} />

  <script src="../scripts/local.js"></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
  ></script>
</html>
