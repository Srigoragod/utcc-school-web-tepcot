---
import moment from "moment";
import { Image } from "astro:assets";
import NoImage from "/public/image/ce.jpg";
import { BLOG_PER_WIDGET } from "../../consts";
import TagList from "./TagList.astro";

const { slug } = Astro.params;
const uri = import.meta.env.PUBLIC_API_WP_BLOG;
const reqUrl = `?per_page=10&_embed&acf_format=standard`;

const getData = async () => {
  const response = await fetch(uri + reqUrl, { mode: "cors" });
  const data = await response.json();
  return data;
};
const workingSlug = slug;

const filterPosts = async (workingSlug) => {
  const data = await getData();
  const filteredPosts = data.filter((post) => post.slug !== workingSlug);
  return filteredPosts;
};
const filteredPosts = await filterPosts(workingSlug);
filteredPosts.sort((a, b) => new Date(b.date) - new Date(a.date));
const widgetPost = filteredPosts.slice(0, BLOG_PER_WIDGET);
---

<div>
  <div class="widget-group flex flex-cols-reverse">
    <div id="post-titles"></div>
    <div class="widget-list w-full">
      {
        widgetPost.length >= 1 ? (
          widgetPost.map((item) => (
            <a href={`/blogs/${item.slug}/`}>
              <div class="widget-item cursor-pointer border-b-2 border-gray-100 hover:bg-gray-100 grid grid-cols-3 tablet:grid-cols-4 gap-4 p-2.5 desktop:p-4 items-between">
                <div class="widget-content text-a-gray-696F6F hover:text-a-black-0B0B0B col-span-2 tablet:col-span-3 text-20">
                  <div class="flex gap-2 items-center">
                    <TagList tags={item.acf?.category} badge="border-none bg-slate-100" /> •
                    <div class="flex flex-col gap-2">
                      <h3 class="text-gray-400">
                        {moment(item.date).format("DD/MM/YYYY")}
                      </h3>
                    </div>
                  </div>
                  <h5
                    class="text-20 text-2-line"
                    set:html={item.title.rendered}
                  />
                </div>
                <div class="widget-image ml-auto">
                  {item.acf.cover_mobile_image ? (
                    <img
                      src={item.acf.cover_mobile_image}
                      alt={item.title.rendered}
                      class="object-cover object-top hover:scale-110 duration-700 rounded-md shadow-md"
                    />
                  ) : item.acf.cover_image ? (
                    <img src={item.acf.cover_image} alt={item.title.rendered}
                    class="object-cover object-top hover:scale-110 duration-700 rounded-md shadow-md" />
                  ) : (
                    <Image src={NoImage} alt={item.title.rendered} class="object-cover object-top hover:scale-110 duration-700 rounded-md shadow-md" />
                  )}
                </div>
              </div>
            </a>
          ))
        ) : (
          <div class="text-center text-a-gray-696F6F p-4">
            <p>ยังไม่มีบทความอื่นๆ</p>
          </div>
        )
      }
    </div>
  </div>
</div>

<style scoped>
  .widget-image {
    position: relative;
    width: 75px;
    height: 75px;
  }
  .widget-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>
