---
const { title, description } = Astro.props;
---

<div id="main-banner" class="main-banner relative bg-a-blue-1c1c84 shadow-2xl">
  <!--  -->
  <div class="container mx-auto rounded-2xl relative">
    <div class="text-topic text-center">
      <h2 class="text-24 md:text-30 lg:text-36 text-1-line opacity-70 font-light">{description}</h2>
      <h1
        class="text-30 md:text-44 lg:text-54 font-bold text-2-line max-w-6xl mx-auto "
        set:html={title}
      />
    </div>
  </div>
</div>
<style scoped>
  @import "../../styles/global.css";
  #main-banner {
    /* background-image: url(/image/abstract-luxury-blue-ce-min.jpg); */
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    width: 100%;
  }

  #main-banner > .container::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/image/bg-mainbanner-02.png");
    background-size: 115%;
    background-position: center top;
    background-repeat: no-repeat;
    background-attachment: scroll;
    opacity: 0.6;
    z-index: 0;
    border-radius: 1rem;
  }
  .main-banner {
    padding-top: 5em;
    padding-bottom: 2.5rem;
  }
  .container {
    background: #0e0b80;
    background: radial-gradient(circle, #0e0b80, #131057);
    height: 246px;
    color: #fafaff;
  }
  .text-topic {
    content: "";
    position: absolute;
    top: 7rem;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 75%;
    padding-top: 0;
    z-index: 1;
  }

  /* Mobile styles */
  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    #main-banner > .container::after {
      background-image: url("/image/bg-mainbanner-02-mobile.png");
      background-size: cover;
      background-position: center top;
      background-repeat: no-repeat;
      background-size: 115%;
    }
  }

  @media only screen and (max-width: 767px) {
    .text-topic {
      padding-top: 3rem;
      width: 100%;
    }

    .main-banner {
      padding-right: 1rem;
      padding-left: 1rem;
      width: 100%;
    }
    #main-banner > .container::after {
      background-image: url("/image/bg-mainbanner-02-mobile.png");
      background-size: cover;
      background-position: center top;
      background-repeat: no-repeat;
      opacity: 0.3;
    }
  }
</style>
