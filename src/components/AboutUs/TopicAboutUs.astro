---
const { title, desc } = Astro.props;
---

<div class="topic-aboutus flex justify-between items-start gap-4">
  <div class="item">
    <h2 class="text-44 md:text-66 scroll-py-2 font-bold capitalize leading-none">
      {title}
    </h2>
    <!-- <h3 class="text-30">{desc}</h3> -->
  </div>

  <div class="item gap-4 item pt-4">
    <slot />
  </div>
</div>
<style scoped>
  .btn:hover {
    color: white;
  }

  @media only screen and (max-width: 767px) {
    .topic-aboutus {
      display: flex;
      flex-direction: column;
      padding: 0 1rem;
      /* align-items: end; */
    }
    .item:nth-child(2) {
      order: 1;
      display: flex;
    }
    .item:nth-child(1) {
      order: 2;
      width: 100%;
    }
  }
  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    .topic-aboutus {
      padding: 0 1rem;
    }
  }
</style>
